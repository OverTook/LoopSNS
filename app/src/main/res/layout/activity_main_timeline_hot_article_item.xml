<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hot_article"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/hot_article_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/local_fire_department_48px"
        android:clickable="false"/>

    <LinearLayout
        android:id="@+id/hot_article_body"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="10dp"
        android:clickable="false"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hot_article_icon"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/hot_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:background="@drawable/map_overview_article_tag_item_bg_red"
            android:clickable="false"
            android:paddingLeft="13dp"
            android:paddingTop="4dp"
            android:paddingRight="13dp"
            android:paddingBottom="4dp"
            android:text="태그1"
            android:textColor="@color/tag_red"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/hot_article_content"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:clickable="false"
            android:fontFamily="@font/pretendard_medium"
            android:maxLines="1"
            android:text="연수동 베라에 불이났네"
            android:textColor="@color/main_text"
            android:textSize="13sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>